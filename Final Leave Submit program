      "cell_type": "code",
      "source": [
        "# Sample Data\n",
        "employees = {\n",
        "    '101': {'name': 'John Doe', 'leave_balance': 15},\n",
        "    '102': {'name': 'Jane Smith', 'leave_balance': 10}\n",
        "}\n",
        "\n",
        "leave_requests = {}\n",
        "user_activity_log = []  # Store user's questions and answers\n",
        "\n",
        "# Function to apply for leave\n",
        "def apply_for_leave():\n",
        "    emp_id = input(\"Enter Employee ID: \")\n",
        "    user_activity_log.append(f\"Entered Employee ID: {emp_id}\")\n",
        "\n",
        "    # Allow any ID (even if not in employees)\n",
        "    if emp_id not in employees:\n",
        "        employees[emp_id] = {'name': f'Employee {emp_id}', 'leave_balance': 10}\n",
        "\n",
        "    name = employees[emp_id]['name']\n",
        "    leave_days_input = input(\"Enter number of leave days: \")\n",
        "    user_activity_log.append(f\"Entered number of leave days: {leave_days_input}\")\n",
        "\n",
        "    if leave_days_input.isdigit():\n",
        "        leave_days = int(leave_days_input)\n",
        "        reason = input(\"Enter reason for leave: \")\n",
        "        user_activity_log.append(f\"Entered reason for leave: {reason}\")\n",
        "\n",
        "        if leave_days <= employees[emp_id]['leave_balance']:\n",
        "            leave_requests[emp_id] = {'name': name, 'leave_days': leave_days, 'reason': reason, 'status': 'Pending'}\n",
        "            employees[emp_id]['leave_balance'] -= leave_days\n",
        "            print(f\"Leave request submitted for {name}.\")\n",
        "            user_activity_log.append(f\"Leave request submitted for {name} with {leave_days} days.\")\n",
        "        else:\n",
        "            print(\"Insufficient leave balance.\")\n",
        "            user_activity_log.append(\"Insufficient leave balance.\")\n",
        "    else:\n",
        "        print(\"Please enter a valid number for leave days.\")\n",
        "        user_activity_log.append(\"Invalid input for leave days.\")\n",
        "\n",
        "# Function to approve or reject leave\n",
        "def process_leave_request():\n",
        "    emp_id = input(\"Enter Employee ID to process: \")\n",
        "    user_activity_log.append(f\"Entered Employee ID for processing: {emp_id}\")\n",
        "\n",
        "    if emp_id in leave_requests:\n",
        "        decision = input(\"Enter decision (Approve/Reject): \")\n",
        "        user_activity_log.append(f\"Decision: {decision}\")\n",
        "\n",
        "        if decision.lower() in ['approve', 'reject']:\n",
        "            leave_requests[emp_id]['status'] = decision.capitalize()\n",
        "            print(f\"Leave request for {leave_requests[emp_id]['name']} has been {decision}.\")\n",
        "            user_activity_log.append(f\"Leave request for {leave_requests[emp_id]['name']} has been {decision}.\")\n",
        "        else:\n",
        "            print(\"Invalid decision. Please enter 'Approve' or 'Reject'.\")\n",
        "            user_activity_log.append(\"Invalid decision entered.\")\n",
        "    else:\n",
        "        print(\"No leave request found for this Employee ID.\")\n",
        "        user_activity_log.append(\"No leave request found.\")\n",
        "\n",
        "# Function to check leave status\n",
        "def check_leave_status():\n",
        "    emp_id = input(\"Enter Employee ID to check status: \")\n",
        "    user_activity_log.append(f\"Entered Employee ID to check status: {emp_id}\")\n",
        "\n",
        "    if emp_id in leave_requests:\n",
        "        request = leave_requests[emp_id]\n",
        "        print(f\"Leave Status for {request['name']}: {request['status']}\")\n",
        "        user_activity_log.append(f\"Leave Status for {request['name']}: {request['status']}\")\n",
        "    else:\n",
        "        print(\"No leave request found for this Employee ID.\")\n",
        "        user_activity_log.append(\"No leave request found.\")\n",
        "\n",
        "# Function to print user activity log\n",
        "def print_user_activity():\n",
        "    print(\"\\nUser Activity Log:\")\n",
        "    for activity in user_activity_log:\n",
        "        print(activity)\n",
        "    print(\"\\nPlease just wait, your leave application is in pending.\")\n",
        "\n",
        "# Main menu\n",
        "while True:\n",
        "    print(\"\\nLeave Management System\")\n",
        "    print(\"1. Apply for Leave\")\n",
        "    print(\"2. Process Leave Request\")\n",
        "    print(\"3. Check Leave Status\")\n",
        "    print(\"4. Exit\")\n",
        "\n",
        "    choice = input(\"Enter your choice: \")\n",
        "\n",
        "    if choice == '1':\n",
        "        apply_for_leave()\n",
        "    elif choice == '2':\n",
        "        process_leave_request()\n",
        "    elif choice == '3':\n",
        "        check_leave_status()\n",
        "    elif choice == '4':\n",
        "        print_user_activity()  # Print log when exiting\n",
        "        break\n",
        "    else:\n",
        "        print(\"Invalid choice. Please enter a number between 1 and 4.\")\n"
      ],
